@using Test.Models
@model Address

@{
    ViewData["Title"] = "AddAddress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Address</h1>

    <div class="row">
        <div class="col-sm-12">
        @using(Html.BeginForm("AddAddress","Addresses",new { ReturnUrl = ViewBag.ReturnUrl },FormMethod.Post))
        { <div class="row">
              <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>House number</label>
                    @Html.TextBoxFor(m=>m.HouseNumber,"",new{ @class="form-control", @placeholder="",@id="HouseNumber"})
                </div>
                </div>
           </div>
               
           <div class="row">
              <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Zip Code</label>
                    @Html.TextBoxFor(m=>m.ZipCode,"",new{ @class="form-control", @placeholder="",@id="ZipCode"})
                </div>
                </div>
           </div>

            <div class="row">
              <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>City</label>
                    @Html.TextBoxFor(m=>m.City,"",new{ @class="form-control", @placeholder="",@id="City"})
                </div>
                </div>
           </div>

                   <div class="row">
              <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Country</label>
                    @Html.TextBoxFor(m=>m.Country,"",new{ @class="form-control", @placeholder="",@id="Country"})
                </div>
                </div>

           </div>

                   <div class="row">
              <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Street</label>
                    @Html.TextBoxFor(m=>m.Street,"",new{ @class="form-control", @placeholder="",@id="Street"})
                </div>
                </div>

           </div>
                <div class="row">
                    <div>
                    <button type="submit" class="btn btn-primary submit-btn">Save</button>
                    </div>
                </div>
        
 }
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

 </div>
 </div>