@using Test.Models
@model IEnumerable<Test.Models.Address>

@{
    ViewData["Title"] = "Index";
     Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="text-center">
    <h1 class="display-4">Welcome to the adresses list</h1>
   
</div>
</br>


<fieldset>
  
    <form asp-action="Index" method="get">
        <div class="form-actions">
        <label>Filter</label>
        <input type="text" name="filter" 
        value="@ViewData["CurrentFilter"]"/>"
        <input type="submit" value="Search" />
        </div>
    </form>
   
</fieldset>


<div class="row">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
        <tr>
            <th></th>
            <th> <a asp-action="Index" asp-route-sortOrder="@ViewData["HouseNumberSort"]">@Html.DisplayNameFor(model => model.HouseNumber)</a> </th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["CodeSortParm"]">@Html.DisplayNameFor(model => model.ZipCode)</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["CitySort"]">@Html.DisplayNameFor(model => model.City)</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["CountrySort"]">@Html.DisplayNameFor(model => model.Country)</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["StreetSort"]">@Html.DisplayNameFor(model => model.Street)</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id </td>
               <td>@item.HouseNumber</td>
                <td>@item.ZipCode</td>
                <td>@item.City</td>
                <td>@item.Country </td>
                 <td>@item.Street </td>
             
                <td>
                    <button asp-action="Update" asp-route-id="@item.Id">Edit</button> |
                    <button asp-action="Details" asp-route-id="@item.Id">Details</button> |
                    <button asp-action="Delete" asp-route-id="@item.Id type="submit">Delete</button>
                   
                </td>
            </tr>
        }
    </tbody>
    </table>
</div>

<div>
    <div class="row">
         <a asp-action="AddAddress" method="Post" class="btn add-btn">Add address</a> 
      
    </div>
</div>